/* Page specific styling */

.project-link {
    position: absolute;
    width: 100%;
    height: 100%;
}

.project-nested-link {
    position:relative;
    z-index: 1;
}

.external-icon {
    position: absolute;
    right: 10px;
    top: 10px;
    pointer-events:none;
}

/* Animations */

.card:hover {
    animation: highlight-shadow 0.2s forwards;
}

@keyframes highlight-shadow {
    from {
        box-shadow: 0 .125rem .25rem rgba(0,0,0,.075);
    }
    to {
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
    }
}
